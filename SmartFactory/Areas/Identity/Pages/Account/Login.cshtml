@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link href="~/Content/assets/css/material.css" rel="stylesheet" />


<div class="row" style="margin:0;">
    <div class="container">
        <section class="col-md-6 col-md-offset-3">
            <div class="card" style="padding:10px">
                <form id="account" method="post">

                    <h3 style="text-align:center;color:#fff;margin-top:30px;margin-bottom:40px">Good Design.</h3>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group col-md-10 col-md-offset-1">
                        <div class="form-control">
                            <span class="col-xs-1" style="padding:0;"><i class="pe-7s-user"></i></span>
                            <label class="col-md-3 col-xs-4" asp-for="Input.Email"></label>
                            <input class="col-md-8 col-xs-7" asp-for="Input.Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-10 col-md-offset-1">
                        <div class="form-control">
                            <span class="col-xs-1" style="padding:0;"><i class="pe-7s-lock"></i></span>
                            <label class="col-md-3 col-xs-4" asp-for="Input.Password"></label>
                            <input class="col-md-8 col-xs-7" asp-for="Input.Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">


                        @*<div class="checkbox2">
                                <label asp-for="Input.RememberMe">
                                    <input type="checkbox" name="Input.RememberMe" />

                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>*@
                    </div>
                    <div class="form-group col-md-10 col-md-offset-1">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group col-md-10 col-md-offset-1">
                        <p class="col-md-6" style="text-align:center;">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p class="col-md-6" style="text-align:center;">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        @*<p>
                                <button type="submit" asp-page-handler="SendVerificationEmail" class="btn-link" style="padding:0px;margin:0px;border:0px">Resend email confirmation</button>
                            </p>*@
                    </div>
                </form>
            </div>
        </section>
    </div>







