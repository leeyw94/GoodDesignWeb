@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
    <link href="~/Content/assets/css/material.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-6">
        <section>
            <div class="card" style="padding:10px">
                <form id="account" method="post">
                  
                    <h4 style="text-align:center">Good Design log in.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                           <div class="form-group">


                        @*<div class="checkbox2">
                            <label asp-for="Input.RememberMe">
                                <input type="checkbox" name="Input.RememberMe" />

                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>*@
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        @*<p>
                    <button type="submit" asp-page-handler="SendVerificationEmail" class="btn-link" style="padding:0px;margin:0px;border:0px">Resend email confirmation</button>
                </p>*@
                    </div>
                </form>
            </div>
        </section>
    </div>
    <div class="col-md-6 ">

        @{
            if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {

            }
            else
            {
                <section>
                    <div class="card" style="padding:10px">
                        <h4>Use another service to log in.</h4>
                        <hr />
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        <button type="submit" class="btn btn-danger" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    </div>
                </section>
                }
            }
        </div>
</div>

